<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="#B72979B6"
        android:id="@+id/toolbar3">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:contentPadding="6dp">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="34dp"
                android:src="@drawable/icono" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="MyBot online"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:textStyle="normal"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_above="@id/hola"
        android:layout_below="@+id/toolbar3"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="#56ECE5E5"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:paddingBottom="50dp" />

    <RelativeLayout
        android:id="@+id/hola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#56ECE5E5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/Send"
            android:elevation="2dp">

            <EditText
                android:id="@+id/codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navidad"
                android:hint="CuÃ©ntame algo"
                android:minHeight="50dp"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/enviar"
                android:tint="#fff" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>