<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#9C3490DC" />

                    <stroke android:width="3dp" android:color="#3490dc" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="1dp"  />

                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item>

                <bitmap android:gravity="bottom|right|center"
                    android:src="@drawable/ic_arrow">
                </bitmap>

            </item>
        </layer-list>
    </item>

</selector>